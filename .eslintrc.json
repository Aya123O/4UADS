{
  // Configuration for JavaScript files
  "extends": [
    "airbnb-base",
    "next/core-web-vitals", // Needed to avoid offing in next.js build: 'The Next.js plugin was not detected in your ESLint configuration'
    "plugin:@tanstack/eslint-plugin-query/recommended"
  ],
  "rules": {
    "linebreak-style": 0,
    // "tailwindcss/no-custom-classname": "off",
    "react/self-closing-comp": "off",
    "prettier/prettier": [
      "off",
      {
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ] // Avoid conflict rule between Prettier and Airbnb Eslint
  },
  "overrides": [
    // Configuration for TypeScript files
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "plugins": [
        "@typescript-eslint",
        "unused-imports",
        "tailwindcss",
        "simple-import-sort",
        "@tanstack/query"
      ],
      "extends": [
        "plugin:tailwindcss/recommended",
        "airbnb",
        "airbnb-typescript",
        "next/core-web-vitals",
        "plugin:prettier/recommended",
        "plugin:@tanstack/eslint-plugin-query/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "global-require": "off",
        "prettier/prettier": [
          "off",
          {
            "singleQuote": true,
            "endOfLine": "auto"
          }
        ], // Avoid conflict rule between Prettier and Airbnb Eslint
        "import/extensions": "off", // Avoid missing file extension errors, TypeScript already provides a similar feature
        "react/function-component-definition": "off", // Disable Airbnb's specific function type
        "react/destructuring-assignment": "off", // Vscode doesn't support automatically destructuring, it's a pain to add a new variable
        "react/require-default-props": "off", // Allow non-defined react props as undefined
        "react/jsx-props-no-spreading": "off", // _app.tsx uses spread operator and also, react-hook-form
        "@typescript-eslint/comma-dangle": "off", // Avoid conflict rule between Eslint and Prettier
        "@typescript-eslint/consistent-type-imports": "off", // Ensure `import type` is used when it's necessary
        "no-restricted-syntax": [
          "off",
          "ForInStatement",
          "LabeledStatement",
          "WithStatement"
        ], // Overrides Airbnb configuration and enable no-restricted-syntax
        "import/prefer-default-export": "off", // Named export is easier to refactor automatically
        "simple-import-sort/imports": "off", // Import configuration for `eslint-plugin-simple-import-sort`
        "react/no-unstable-nested-components": "off", // Allow unstable nested components
        "@typescript-eslint/no-shadow": "off", // Allow shadowing variables
        "simple-import-sort/exports": "off", // Export configuration for `eslint-plugin-simple-import-sort`
        "no-underscore-dangle": "off", // Allow underscore in variable names
        "react/jsx-no-constructed-context-values": "off", // Allow constructed context values
        "jsx-a11y/anchor-has-content": "off", // Allow empty anchor
        "jsx-a11y/media-has-caption": "off", // Allow media without caption
        "@typescript-eslint/no-use-before-define": "off", // Allow using variables before defining them
        "import/order": "off", // Avoid conflict rule between `eslint-plugin-import` and `eslint-plugin-simple-import-sort`
        "jsx-a11y/heading-has-content": "off", // Allow empty heading
        "jsx-a11y/label-has-associated-control": "off", // Allow label without associated control
        "tailwindcss/classnames-order": "off",
        "consistent-return": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-nested-ternary": "off",
        "@typescript-eslint/naming-convention": "off",
        "tailwindcss/no-custom-classname": "off",
        "tailwindcss/no-contradicting-classname": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@next/next/no-img-element": "off",
        "default-case": "off",
        "prefer-destructuring": "off",
        "react/button-has-type": "off",
        "unused-imports/no-unused-imports": "off",
        "unused-imports/no-unused-vars": [
          "off",
          {
            "argsIgnorePattern": "^(_|props)", // Ignore variables starting with _ or props
            "ignoreRestSiblings": true // Ignore rest siblings (e.g., ...props)
          }
        ]
      }
    },
    // Configuration for testing
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "plugins": ["vitest", "jest-formatting", "testing-library", "jest-dom"],
      "extends": [
        "plugin:vitest/recommended",
        "plugin:jest-formatting/recommended",
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended"
      ]
    },
    // Configuration for e2e testing (Playwright)
    {
      "files": ["**/*.spec.ts"],
      "extends": ["plugin:playwright/recommended"]
    },
    // Configuration for Storybook
    {
      "files": ["*.stories.*"],
      "extends": ["plugin:storybook/recommended"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "off",
          {
            "devDependencies": false
          }
        ]
      }
    }
  ]
}
